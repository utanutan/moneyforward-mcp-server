# === MoneyForward Authentication ===
MF_EMAIL=your-email@example.com
MF_PASSWORD=your-password-here

# === MCP Server Configuration ===
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_AUTH_TOKEN=your-bearer-token-here   # Optional: Bearer token for MCP client authentication

# === Cache Configuration ===
CACHE_TTL_SECONDS=300                   # Cache TTL in seconds (default: 5 minutes)
SNAPSHOT_INTERVAL_HOURS=24              # Daily asset snapshot interval (default: 24 hours)

# === Browser Configuration ===
BROWSER_CONTEXT_DIR=./browser-context       # Docker: /app/browser-context
BROWSER_HEADLESS=true

# === Database Configuration ===
CACHE_DB_PATH=./data/cache.db               # Docker: /app/data/cache.db

# === Logging Configuration ===
LOG_LEVEL=INFO                          # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json                         # Options: json, console

# === Selector Configuration ===
SELECTORS_PATH=src/selectors.yaml

# === Account Configuration ===
ACCOUNTS_CONFIG_PATH=accounts.yaml      # Path to manual accounts YAML (see accounts.yaml.example)
